---
// DTC Hero component
import homepage from '../content/site/homepage.json';
const { hero } = homepage;
---

<section class="my-4 relative">
  <div class="relative min-h-[400px]">
    <div class="flex flex-wrap items-center justify-center min-h-[400px] mb-6 md:mb-12">
      <div class="text-center z-10 p-8">
        <h1 class="text-4xl md:text-6xl text-white font-roboto-condensed font-bold mb-4">
          <span class="text-yellow-300">{hero.titleHighlight}</span> {hero.titleMain}<br>
          {hero.subtitle}
        </h1>
        <p class="text-xl md:text-2xl text-gray-200 font-light">
          {hero.description}
        </p>
      </div>

      <!-- Background with gradient overlay -->
      <div class="absolute inset-0 w-full h-full">
        <!-- DTC-themed gradient background -->
        <div class="absolute inset-0 bg-gradient-to-br from-umichblue via-dtc-accent to-dtc-primary"></div>
        
        <!-- Pattern overlay for texture (inline SVG tile) -->
        <div class="absolute inset-0 opacity-10" aria-hidden="true">
          <svg width="100%" height="100%" viewBox="0 0 60 60" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg" style="display:block;">
            <defs>
              <pattern id="dtcDot" width="60" height="60" patternUnits="userSpaceOnUse">
                <g fill="none" fill-rule="evenodd">
                  <circle cx="30" cy="30" r="2" fill="#ffffff" fill-opacity="0.3"/>
                  <circle cx="10" cy="10" r="1" fill="#ffffff" fill-opacity="0.3"/>
                  <circle cx="50" cy="10" r="1" fill="#ffffff" fill-opacity="0.3"/>
                  <circle cx="10" cy="50" r="1" fill="#ffffff" fill-opacity="0.3"/>
                  <circle cx="50" cy="50" r="1" fill="#ffffff" fill-opacity="0.3"/>
                </g>
              </pattern>
            </defs>
            <rect width="100%" height="100%" fill="url(#dtcDot)"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

</section>
