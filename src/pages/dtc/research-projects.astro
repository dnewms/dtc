---
import MainLayout from '../../layouts/MainLayout.astro';
import researchFiles from '../../data/researchFiles.json';
---

<MainLayout title="Research Projects - Digital Twin Center">
  <section class="max-w-6xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold font-roboto-condensed mb-8">Research Projects</h1>
    <ul class="surface rounded-lg divide-y divide-gray-200">
      {researchFiles.map((file) => (
        <li class="px-6 py-4">
          <a href={file.link} target="_blank" rel="noopener noreferrer" class="font-semibold text-dtc-orange-text hover:underline inline-flex items-center gap-1.5">
            {file.title}
            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
            <span class="inline-flex items-center bg-red-100 text-red-700 text-xs font-medium px-1.5 py-0.5 rounded">PDF</span>
            <span class="sr-only">(opens in new tab)</span>
          </a>
          <p class="text-sm text-gray-600 mt-1">{file.description}</p>
        </li>
      ))}
    </ul>
  </section>
</MainLayout>
