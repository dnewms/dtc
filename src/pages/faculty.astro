---
import MainLayout from '../layouts/MainLayout.astro';
import leadership from '../content/faculty/leadership.json';
import researchFacultyData from '../content/faculty/research-faculty.json';

// Helper function to get border color class based on role
function getBorderColor(role: string): string {
  switch (role) {
    case 'primary': return 'border-dtc-primary';
    case 'secondary': return 'border-dtc-secondary';
    default: return 'border-gray-400';
  }
}

// Helper function to get university background color
function getUniBgColor(shortName: string): string {
  return shortName === 'UM' ? 'bg-umichblue' : 'bg-red-700';
}
---

<MainLayout title="Faculty - Digital Twin Center">

  <!-- Header -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold font-roboto-condensed mb-4">
        Our Faculty
      </h1>
      <div class="subtitle-double-line-dtc mx-auto mb-6" aria-hidden="true"></div>
      <p class="text-xl text-gray-600 max-w-4xl mx-auto">
        World-class researchers from leading universities driving innovation in digital twin technologies for manufacturing.
      </p>
    </div>
  </section>

  <!-- Center Leadership -->
  <section class="bg-gray-50 py-16">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold font-roboto-condensed text-center mb-12">
        Center Leadership
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        {(leadership.universities || []).map((university) => (
          <div class="surface p-8 rounded-lg">
            <div class="mb-2">
              <img src={university.logo} alt={`${university.name} logo`} class="w-72 h-auto object-contain" />
            </div>
            <div class="mb-6">
              <h3 class="text-2xl font-bold">{university.name}</h3>
              <p class="text-gray-600">{university.location}</p>
            </div>

            <div class="space-y-6">
              {(university.leaders || []).map((leader) => (
                <div class={`border-l-4 ${getBorderColor(leader.role)} pl-4`}>
                  <div class="flex items-start gap-4 mb-4">
                    <div class="w-16 h-16 overflow-hidden rounded-full bg-gray-200 flex-shrink-0">
                      <img
                        src={leader.image}
                        alt={leader.name || 'Faculty member'}
                        class="w-full h-full object-cover"
                        onerror={`this.style.display='none'; this.nextElementSibling.style.display='flex';`}
                      />
                      <div
                        class={`w-16 h-16 ${getUniBgColor(university.shortName)} rounded-full flex items-center justify-center text-white font-bold text-sm`}
                        style="display: none;"
                      >
                        {(leader.name || '').split(' ').map(n => n[0]).join('').slice(0, 2)}
                      </div>
                    </div>
                    <div>
                      <h4 class="text-xl font-bold mb-2">{leader.name}</h4>
                      <p class="text-gray-600 mb-2">{leader.title}</p>
                    </div>
                  </div>
                  <p class="text-sm text-gray-600 mb-2">
                    {leader.description}
                  </p>
                  {leader.email && <a href={`mailto:${leader.email}`} class="text-dtc-orange-text hover:underline text-sm">
                    {leader.email}
                  </a>}
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Research Faculty -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <h2 class="text-3xl font-bold font-roboto-condensed text-center mb-12">
      Research Faculty
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {(researchFacultyData.faculty || []).map((person) => (
        <div class="card-base surface p-6">
          <h3 class="text-xl font-bold text-center mb-2">{person.name}</h3>
          <p class="text-center text-gray-600 mb-3">{person.university}</p>
          <p class="text-sm text-gray-600 text-center mb-4">
            Research focus: {person.researchFocus}
          </p>
          {person.website && <div class="text-center">
            <a href={person.website} target="_blank" rel="noopener noreferrer" class="text-dtc-orange-text hover:underline text-sm">
              Website<span class="sr-only"> (opens in new tab)</span>
            </a>
          </div>}
        </div>
      ))}
    </div>

    <!-- Contact Information -->
    <div class="mt-16 text-center border-2 border-[#D86018] p-8 rounded-lg">
      <h2 class="text-2xl font-bold mb-4">Join Our Research Community</h2>
      <p class="text-lg text-gray-600 mb-6">
        Interested in collaborating with our faculty or learning more about our research?
      </p>
      <a href="mailto:cdtm-iucrc@umich.edu" class="inline-block bg-[#D86018] text-white px-6 py-3 rounded-lg font-semibold hover:bg-[#c45515] transition-colors">
        Contact Us
      </a>
    </div>
  </section>

</MainLayout>
